@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider
    FullWidth="true"
    MaxWidth="MaxWidth.Medium"
    />
<MudSnackbarProvider />

<MudLayout Style="padding:10px">
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        VITAS-Service Opportunity
        <MudSpacer></MudSpacer>

        <MudButton  Style="margin:10px" Variant="Variant.Outlined" Color="Color.Inherit">Home</MudButton>
        <MudButton Style="margin:10px" Variant="Variant.Outlined" Color="Color.Inherit">New Case</MudButton>
        <MudButton Style="margin:10px" Variant="Variant.Outlined" Color="Color.Inherit">Report</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu/>
    </MudDrawer>

    <MudMainContent>
        @Body


        <_FilterMenu />
        <_TabMenu />
        <_TableView />
    </MudMainContent>


</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    public string SelectedOption { get; set; }

    private void Reset()
    {
        SelectedOption = null;
    }
}