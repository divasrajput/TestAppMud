
<MudTable Items="@actions" style="border: 1px solid #000;" Hover="@true" Striped="true" Bordered="true" HeaderClass="table-head-bordered" FooterClass="table-foot-bordered">
    <HeaderContent>
        <MudTh>Case No.</MudTh>
        <MudTh>Program</MudTh>
        <MudTh>Comment Date</MudTh>
        <MudTh>Applies To</MudTh>
        <MudTh>Details</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Level</MudTh>


    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Case No.">@context.Number</MudTd>
        <MudTd DataLabel="Program">@context.ProgramName</MudTd>
        <MudTd DataLabel="Comment Date">@context.CommentDate</MudTd>
        <MudTd DataLabel="Applies To">@context.AppliesTo</MudTd>
        <MudTd DataLabel="Details">@context.Details</MudTd>
        <MudTd DataLabel="Status">@context.Status</MudTd>
        <MudTd DataLabel="Level">@context.Level</MudTd>

    </RowTemplate>
</MudTable>


